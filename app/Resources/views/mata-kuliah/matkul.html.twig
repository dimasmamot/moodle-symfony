<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <a href="#" class="navbar-brand">
            <img src="{{asset('img/Logo Vertikal.png')}}" style="height: 32px;">
        </a>
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="#">Beranda</a>
            </li>
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" id="navSubject" data-toggle="dropdown">
                    Subject
                </a>
                <div class="dropdown-menu">
                    <a href="#" class="dropdown-item">Subject 1</a>
                    <a href="#" class="dropdown-item">Subject 2</a>
                    <a href="#" class="dropdown-item">Subject 3</a>
                    <a href="#" class="dropdown-item">Subject 4</a>
                    <a href="#" class="dropdown-item">Subject 5</a>
                </div>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" id="navSubject" data-toggle="dropdown">
                    Akun
                </a>
                <div class="dropdown-menu">
                    <a href="#" class="dropdown-item">Profil</a>
                    <a href="#" class="dropdown-item">Log Out</a>
                </div>
            </li>
        </ul>
    </nav>
    <div class="fluid-container">
        <div id="section1 p-5">
            <div class="row">
                <div class="col-md-2 p-4"></div>
                <div class="col-md-8 p-4">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h3 class="mb-2">{{ tblSubjects.subjectName }} <small>Nama Kategori</small>
                                <button type="button" class="btn btn-success btn-sm float-right">
                                    <span class="oi oi-plus" title="plus" aria-hidden="true"></span> Tambah
                                </button>
                            </h3>
                        </div>
                        <div class="card-body p-5">
                            <div class="row">
                                <div class="card-columns">
                                    {% for item in tblCourse%}

                                    <div class="card">
                                        <img src="{{asset('img/card.png')}}" class="card-img-top">
                                        
                                        <div class="card-body">
                                            <h4 class="card-title">{{ item.courseName }}</h4>
                                            <p class="card-text">
                                                {{ item.courseDesc }}
                                            </p>
                                            <a href="{{ matkul }}/{{ item.idCoursePk }}" class="btn btn-primary">Lihat Modul</a>
                                        </div>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>  
                </div>
                <div class="col-md-2 p-4"></div>
            </div>
        </div>
    </div>
{% endblock %}

