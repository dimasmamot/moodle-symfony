	<div class="modal fade" id="modalModul">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title">Tambah Modul</h4>
					<button type="button" class="close" data-dismiss="modal">&times;</button>
				</div>
				<div class="modal-body">
						
					<input type="file" name="filePath" id="filePath" class="custom-file-input">
					{{ form_start(form) }}
						<div class="form-group">
							<label class="custom-file">
					            {{ form_row(form.file) }}
								<span class="custom-file-control"></span>
							</label>
		            		{{ form_row(form.upload, {'attr': {'class': 'btn btn-primary'}}) }}
						</div>
		        	{{ form_end(form) }}
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>

	<div class="modal fade" id="modalQuiz">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title">Tambah Quiz</h4>
					<button type="button" class="close" data-dismiss="modal">&times;</button>
				</div>
				<div class="modal-body">
					<form>
						<div class="form-group">
						    <label for="namaQuiz">Nama Quiz</label>
						    <input type="text" class="form-control" id="namaQuiz" placeholder="Nama Quiz" name="namaQuiz">
						</div>
						<div class="form-group">
							<label for="paketSoal">Paket Soal</label>
							<select class="form-control" id="paketSoal">
								<option>UAS Teknologi Web</option>
								<option>Post Test AJAX</option>
								<option>UTS Node JS</option>
								<option>Quiz Web Service</option>
							</select>
						</div>
						<div class="form-group">
						    <label for="quizAttempt">Quiz Attempt</label>
						    <input type="number" class="form-control" id="quizAttempt" placeholder="Attempt" name="namaQuiz">
						</div>
						<div class="form-group">
						    <label for="quizDuration">Durasi Quiz</label>
						    <input type="number" class="form-control" id="quizDuration" placeholder="Durasi" name="quizDuration">
						</div>

						<button type="submit" class="btn btn-primary">Submit</button>
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>

